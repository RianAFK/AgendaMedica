@page
@model RegisterModel
@{
    ViewData["Title"] = "Cadastrar";
}


<div class="row">
    <div class="col-md-4 offset-4">
        <h1 class="text-white text-center">@ViewData["Title"]</h1>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <p class="text-white-50 text-center">Criar uma nova conta.</p>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <h4 class="text-white ms-2">Email</h4>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control form-control rounded-pill" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <h4 class="text-white ms-2">Senha</h4>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control form-control rounded-pill" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Senha</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <h4 class="text-white ms-2">Confirmar Senha</h4>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control form-control rounded-pill" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword">Confirmar Senha</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <br />
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn btn-dark rounded-pill w-100">Cadastrar</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
