@model AgendaMedica.Models.Medico

@{
    ViewData["Title"] = "Edit";
}

<div class="d-inline-block col-md-4 bg-dark text-white py-2 rounded-3">
    <h1 class="ms-3 text-white">Editar Médico</h1>
</div>
<hr />
<div class="col-md-4 bg-dark text-white p-4 rounded-3">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MedicoId" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control w-100" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CRM" class="control-label"></label>
                <input asp-for="CRM" class="form-control w-100" />
                <span asp-validation-for="CRM" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Celular" class="control-label"></label>
                <input asp-for="Celular" class="form-control w-100" />
                <span asp-validation-for="Celular" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EspecialidadeId" class="control-label"></label>
                <select asp-for="EspecialidadeId" class="form-control w-100" asp-items="ViewBag.EspecialidadeId"></select>
                <span asp-validation-for="EspecialidadeId" class="text-danger"></span>
            </div>
            <div class="form-group py-2">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>

<div class="mt-2">
    <a asp-action="Index" class="text-white text-decoration-none bg-secondary py-2 px-2 rounded-2">
        Voltar para a lista
    </a>
</div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
