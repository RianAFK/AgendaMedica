@model AgendaMedica.Models.Especialidade

@{
    ViewData["Title"] = "Create";
}

<div class="d-inline-block col-md-4 bg-dark text-white py-2 rounded-3">
    <h1 class="ms-3 text-white">Criar Especialidades</h1>
</div>
<hr />
<div class="col-md-4 bg-dark text-white p-4 rounded-3">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
        <div class="form-group  py-2">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>


    <div class="mt-2">
        <a asp-action="Index" class="text-white text-decoration-none bg-secondary py-2 px-2 rounded-2">Voltar para a lista</a>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
