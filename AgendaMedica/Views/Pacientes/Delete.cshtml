@model AgendaMedica.Models.Paciente

@{
    ViewData["Title"] = "Deletar Paciente";
}

<div class="container mt-5">
    <div class="card bg-dark text-white shadow-lg rounded-4">
        <div class="card-body p-5 text-center">
            <h2 class="mb-3 text-danger fw-bold">
                <i class="bi bi-exclamation-triangle-fill me-2"></i> Deletar Paciente
            </h2>
            <p class="lead mb-4">Tem certeza que deseja excluir este Paciente?</p>

            <div class="border-top border-bottom py-3 my-4 text-start">
                <dl class="row mb-0">
                    <dt class="col-sm-3 fw-bold">Paciente</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>

                    <dt class="col-sm-3 fw-bold">CPF</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.CPF)</dd>

                    <dt class="col-sm-3 fw-bold">Celular</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Celular)</dd>

                    <dt class="col-sm-3 fw-bold">Telefone</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Telefone)</dd>

                    <dt class="col-sm-3 fw-bold">Data de Nascimento</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.DataNasc)</dd>

                    <dt class="col-sm-3 fw-bold">Endereço</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Endereco)</dd>

                    <dt class="col-sm-3 fw-bold">Bairro</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Bairro)</dd>

                    <dt class="col-sm-3 fw-bold">Cidade</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Cidade)</dd>

                    <dt class="col-sm-3 fw-bold">UF</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.UF)</dd>

                    <dt class="col-sm-3 fw-bold">CEP</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.CEP)</dd>

                    <dt class="col-sm-3 fw-bold">Prontuario</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Prontuario)</dd>

                    <dt class="col-sm-3 fw-bold">Email</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>
                </dl>
            </div>

            <form asp-action="Delete">
                <input type="hidden" asp-for="PacienteID" />

                <button type="submit" class="btn btn-danger btn-lg px-4 me-3">
                    Confirmar Exclusão
                </button>

                <a asp-action="Index" class="btn btn-outline-light btn-lg px-4">
                    Voltar para a lista
                </a>
            </form>
        </div>
    </div>

</div>