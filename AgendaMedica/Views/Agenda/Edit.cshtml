@model AgendaMedica.Models.Agenda

@{
    ViewData["Title"] = "Edit";
}
<div class="d-inline-block col-md-4 bg-dark text-white py-2 rounded-3">
<h1 class="ms-3 text-white">Editar Agendamento</h1>
</div>
<hr />
<div class="col-md-4 bg-dark text-white p-4 rounded-3">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AgendaId" />
            <div class="form-group mb-1">
                <label asp-for="PacienteId" class="control-label text-white">Paciente</label>
                    <select asp-for="PacienteId" class="form-control w-100" asp-items="ViewBag.PacienteId"></select>
                <span asp-validation-for="PacienteId" class="text-danger"></span>
            </div>
                <div class="form-group mb-1">
                <label asp-for="MedicoId" class="control-label text-white">Medico</label>
                    <select asp-for="MedicoId" class="form-control w-100" asp-items="ViewBag.MedicoId"></select>
                <span asp-validation-for="MedicoId" class="text-danger"></span>
            </div>
                <div class="form-group mb-1">
                <label asp-for="DataConsulta" class="control-label text-white">Data Da Consulta</label>
                    <input asp-for="DataConsulta" class="form-control w-100" />
                <span asp-validation-for="DataConsulta" class="text-danger"></span>
            </div>
                <div class="form-group mb-1">
                <label asp-for="Status" class="control-label text-white">Status</label>
                    <input asp-for="Status" class="form-control w-100" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group py-2">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
<div class="mt-2">
    <a asp-action="Index" class="text-white text-decoration-none bg-secondary py-2 px-2 rounded-2">
        Voltar para Agenda
    </a>
</div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}